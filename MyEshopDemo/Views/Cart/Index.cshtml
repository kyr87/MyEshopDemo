@model IEnumerable<MyEshopDemo.Viewmodels.CartViewModel>

@{
    ViewBag.Title = "Cart Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}

<h2>Cart Details</h2>
@if (ViewBag.Message != null)
{
    <h3>@ViewBag.Message</h3>
}
else
{
    <table class="table">
        <tr>

            <th>
                Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                Image
            </th>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td class="qty@(item.ProductId)">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img height="200" src="~/Image/@Html.DisplayFor(modelItem => item.Thumbnail)" />
                </td>
                <td>
                    <a class="incrproduct btn btn-success" href="#" data-id="@item.ProductId">+</a>
                    <a class="decrproduct btn btn-info" href="#" data-id="@item.ProductId">-</a>
                    <a class="removeproduct btn btn-danger" href="#" data-id="@item.ProductId">Remove</a>
                </td>
                <td class="total@(item.ProductId)">
                    &euro; @Html.DisplayFor(modelItem => item.Total)
                </td>


            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td class="grandtotal">
                <b>GrandTotal</b>
                &euro;<span>@ViewBag.GrandTotal</span>
            </td>
        </tr>
    </table>

    <div class="paypaldiv">
        <form class="paypalform" action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post">
            <input type="hidden" name="cmd" value="_cart">
            <input type="hidden" name="business" value="example@hotmail.com">

            @foreach (var item in Model)
            {
                <input type="hidden" name="item_name_@count" value="@item.ProductName">
                <input type="hidden" name="price_@count" value="@item.Price">
                <input type="hidden" name="quantity_@count" value="@item.Quantity">
                count++;
            }


            <input type="hidden" name="currency_code" value="EUR">
            <input type="hidden" name="amount" value="0.00">
            <input type="image" src="http://www.paypal.com/en_US/i/btn/x-click-but01.gif" name="submit" alt="Make payments with PayPal - it's fast, free and secure!">
        </form>
    </div>
    <br/>
    <a href="#" class="placeorder btn btn-primary pull-right">Checkout</a>  
}

@section Scripts
{
    <script>
        $(function () {

            //Increment product
            $("a.incrproduct").click(function (e) {
                e.preventDefault();
                var ProductId = $(this).data("id");
                var url = "/cart/IncrementProduct";

                $.getJSON(url, { ProductId: ProductId }, function (data) {
                    $("td.qty" + ProductId).html(data.qty);
                    var price = data.qty * data.price;
                    var priceHtml = "&euro;" + price.toFixed(2);
                    $("td.total" + ProductId).html(priceHtml);
                    var gt = $("td.grandtotal span").text();
                    gt = parseFloat(gt);
                    var grandtotal = (gt + data.price).toFixed(2);
                    $("td.grandtotal span").text(grandtotal);

                }).done(function (data) {
                    var url2 = "/cart/PaypalPartial";

                    $.get(url2, {}, function (data) {
                        console.log(data);
                        $("div.paypaldiv").html(data);
                    });
                })
            });
            ///////////////////////////////////////////////////////////////
            //Decrement Product
            $("a.decrproduct").click(function (e) {
                e.preventDefault();

                var ProductId = $(this).data("id");
                var url = "/cart/DecrementProduct";
                var $this = $(this);
                $.getJSON(url, { ProductId: ProductId }, function (data) {
                    if (data.qty == 0) {
                        console.log("the quantity is zero");
                        $this.parent().parent().fadeOut("fast", function () {
                            location.reload();
                        });
                    } else {
                        $("td.qty" + ProductId).html(data.qty);
                        var price = data.qty * data.price;
                        var priceHtml = "&euro;" + price.toFixed(2);

                        $("td.total" + ProductId).html(priceHtml);

                        var gt = $("td.grandtotal span").text();
                        gt = parseFloat(gt);

                        var grandtotal = (gt - data.price).toFixed(2);

                        $("td.grandtotal span").text(grandtotal);
                    }
                }).done(function (data) {
                    var url2 = "/cart/PaypalPartial";
                    $.get(url2, {}, function (data) {
                        $("div.paypaldiv").html(data);
                    });
                });
            });


            ///////////////////////////////////////////////////////////////
            //Remove Product
            $("a.removeproduct").click(function (e) {
                e.preventDefault();
                var ProductId = $(this).data("id");
                var url = "/cart/RemoveProduct";

                $.get(url, { ProductId: ProductId }, function () {
                    location.reload();
                });
            });

            // Placeorder

            $("a.placeorder").click(function (e) {
                var baseURL = window.location.protocol + "//" + window.location.host + "/";
                e.preventDefault();
                $(".ajaxbg").show();

                var url = "cart/PlaceOrder";
                $.post(url, {}, function (data){
                    $(".ajaxbg span").append("Thank you.You will now be redirected to paypal.");
                    setTimeout(function () {
                        $("form input[name = 'submit']").click();
                    }, 2000);
                }).done(function (data) {
                        console.log("success");
                    }).fail(function (e) {
                        console.log(e.status);
                    });
            });
        });
    </script>
}