@model MyEshopDemo.Viewmodels.SingleProductViewModel

@{
    ViewBag.Title = Model.Category.Name + " - " + @Html.DisplayFor(model=>Model.Product.Name);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            @Html.ActionLink("Home", "Index", "Home")
        </li>
        <li class="breadcrumb-item"><a href="/home/category/@Model.Category.CategoryId">@Model.Category.Name</a></li>
        <li class="breadcrumb-item active">@Html.DisplayFor(model=>Model.Product.Name)</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-6" id="bigthumb">
        <img src="~/Image/@Url.Content(Model.Product.Thumbnail)" />
    </div>
    <div class="col-md-6" >
        <h3>@Html.DisplayFor(model=>Model.Product.Name)</h3>
        <h4>Κατηγορία: @Html.DisplayFor(model => Model.Category.Name)</h4>
        <p>@Html.Raw(Model.Product.Description)</p>
        <h3>Τιμή: @Html.DisplayFor(model=>Model.Product.Price)</h3>
        <button class="btn btn-default" id="@Html.DisplayFor(model=>Model.Product.ID)">
            Στο καλάθι
        </button>
    </div>
</div>
